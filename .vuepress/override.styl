$accentColor = #056dd2
$codeBgColor = #171A23

$contentFont = "Univers"
$uiFont = "Univers"

body {
	background: #fafaf9;
	background: #fff;
	font-family: $uiFont !important;
	// letter-spacing: 0.02rem;
}

h2 {
	font-family: BrownStd, $uiFont;
	font-weight: 500 !important;
	
	font-size: 1.8rem !important;
	letter-spacing: -1px;
}

h1 {
	font-weight: 700 !important;
	font-size: 2.6rem !important;
	letter-spacing: -0.9px;
	
	padding-left: 16px !important;
	padding-right: 16px !important;
	padding-top: 7px !important;
	padding-bottom: 4px !important;

	margin-top: 96px !important;
	margin-left: -16px;

	color: #fff;
	background: $accentColor;
	
	display: inline-block;
	
	a.header-anchor {
		margin-left: -1.2em;
	}
}

table {
	width: 100%;
	
	td:first-child,
	th:first-child {
		width: 40%;
	}
}

th {
	text-align: left;
}

.component + h2 {
	margin-top: 24px !important;
}

p + h2,
p + h3 {
	margin-top: 64px;
}

.home .hero + .content {
	margin-top: 96px;
}

.home .hero h1 {
	font-family: $contentFont;
}

.home .hero p {
	margin-top: 0 !important;
	margin-bottom: 64px !important;
}

// .sidebar {
// 	background: #fafaf9 !important;
// }

.navbar {
	background: hsl(hue($accentColor), 20%, 12%) !important;
	color: #fff;
	
	a:hover {
		color: #fff;
	}
	
	a.router-link-active {
		color: #fff;
	}

	.site-name {
		color: #fff;
		
		letter-spacing: 2px;
		font-size: 16px;
		font-weight: 500;
		
		text-transform: capitalize;
	}
}

.sidebar-heading {
	font-weight: 500;
	font-size: 1.32rem;
}

.sidebar-group-items li {
	font-size: 0.91rem;
	
	a {
		font-weight: 400 !important;
		line-height: 1.5;
		
		&.active {
			font-weight: 600 !important;
		}
	}
}

.definition-page .content:not(.custom) > p:first-of-type {
	font-weight: 400;
	font-size: 20px;
	
	margin-top: 8px;
	margin-bottom: 36px;
}

.content {
	font-family: $contentFont !important;
	letter-spacing: 0px;
}

.tip.custom-block {
	border-color: $accentColor !important;
}

.el-tabs__nav-wrap {
	padding-left: 16px !important;
}

.el-tabs__item.is-active {
	border-top: 2px solid $accentColor;
	height: 100%;
	color: $accentColor !important;	
}